<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* The side navigation menu */
        .sidebar {
            margin: 0px;
            padding: 0;
            width: 200px;
            background-color: #f1f1f1;
            position: fixed;
            height: 100%;
            overflow: auto;
            
        }

            /* Sidebar links */
            .sidebar a {
                display: block;
                color: black;
                padding: 16px;
                text-decoration: none;
            }

                /* Active/current link */
                .sidebar a.active {
                    background-color: #2c8ae1;
                    color: white;
                }

                /* Links on mouse-over */
                .sidebar a:hover:not(.active) {
                    background-color:#2c8ae1;
                    color: white;
                }

        /* Page content. The value of the margin-left property should match the value of the sidebar's width property */
        div.content {
            margin-left: 250px;
            padding: 1px 16px;
            height: 100%;
            margin-top: 30px;
        }

        .navbar-fixed-top {
            background-color: #f1f1f1;
            color: #2542e3;
        }

            .navbar-fixed-top li:hover {
                background-color: #8fc5f1;
                color: white;
            }

            .navbar-fixed-top li:active {
                background-color: #4CAF50;
                color: white;
            }
    </style>
</head>
<body>
    <div class="navbar-fixed-top" style="margin-top:0px;padding-top:0px; background-color: #f1f1f1; ">

        <div class="navbar-header" style="margin-left:5px; ">

            @Html.ActionLink("E-Exam", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="container" style="margin-top:0px;">

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-left:0px ;padding:0">
        <!-- The sidebar -->
        <div class="sidebar">
            <div class="active"> @Html.ActionLink("Profile", "StudentPage", "Students")</div>
           <div > @Html.ActionLink("Subjects", "StudentResult", "Students")</div>
            <div> @Html.ActionLink("Exams", "StudentExams", "Exam")</div>
        </div>

        <!-- Page content -->
        <div class="content">

            @RenderBody()

        </div>



        <hr />
        <footer style="margin-left: 200px;padding: 1px 16px;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

