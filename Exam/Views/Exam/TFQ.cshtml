@model IEnumerable<Exam.Models.TFquestion>

@{
    ViewBag.Title = "TFQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TFQ</h2>

<h2>NextQuestionMCQ</h2>
@Html.DisplayNameFor(model => model.Chapter.Subject.name)


<h4>Question</h4>
<hr />
<div>
    @foreach (var item in Model)
    {
        <div>

            @using (Ajax.BeginForm("CorrectAnswerTF", "Exam", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = item.TF_id.ToString(), InsertionMode = InsertionMode.Replace }))
            {


                <div id="@item.TF_id.ToString()">  @Html.Partial("CorrectAnswerTF", item) </div>


            }
        </div>
    }
</div>

@section Scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
}